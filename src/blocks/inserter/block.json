{
  "apiVersion": 3,
  "name": "wpfn/inserter",
  "title": "FlashNotes: Inserter",
  "category": "widgets",
  "icon": "sticky",
  "description": "Create or reference a study note and display it.",
  "supports": {
    "html": false,
    "anchor": true
  },
  "attributes": {
    "id": {
      "type": "number",
      "default": 0
    },
    "title": {
      "type": "string", 
      "default": ""
    },
    "answers_json": {
      "type": "array",
      "default": []
    },
    "explanation": {
      "type": "string",
      "default": ""
    },
    "borderRadius": { "type": "number", "default": 4 },
    "shadow": { "type": "number", "default": 1 },
    "borderColor": { "type": "string", "default": "#ddd" },
    "backgroundColor": { "type": "string", "default": "#fafafa"},
    "padding": { "type": "number", "default": 16 },
    "margin": { "type": "number", "default": 8 }
  },
  "editorScript": "wpfn-blocks",
  "style": "file:./style.css"
}