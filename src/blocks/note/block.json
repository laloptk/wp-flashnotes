{
  "apiVersion": 3,
  "name": "wpfn/note",
  "title": "FlashNotes: Note",
  "category": "widgets",
  "icon": "clipboard",
  "description": "Create or reference a study note and display it.",
  "supports": {
    "html": false,
    "anchor": true
  },
  "allowedBlocks": [ "core/paragraph", "core/list", "core/spacer" ],
  "attributes": {
    "title": {
      "type": "string",
      "default": ""
    },
    "content": {
      "type": "string",
      "default": ""
    },
    "block_id": {
      "type": "string"
    },
    "margin": {
      "type": "object",
      "default": {
        "top": "1em",
        "right": "0",
        "bottom": "1em",
        "left": "0"
      }
    },
    "padding": {
      "type": "object",
      "default": {
        "top": "15px",
        "right": "15px",
        "bottom": "15px",
        "left": "15px"
      }
    },
    "border": {
      "type": "object",
      "default": {
        "color": "#ddd",
        "style": "solid",
        "width": "1px"
      }
    },
    "borderRadius": {
      "type": "object",
      "default": {
        "top": "25px",
        "right": "25px",
        "bottom": "25px",
        "left": "25px"
      }
    },
    "backgroundColor": {
      "type": "string",
      "default": "#fafafa"
    },
    "hidden": {
      "type": "boolean",
      "default": false
    }
  },
  "editorScript": "wpfn-blocks",
  "style": "file:./style.css"
}
